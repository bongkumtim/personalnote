<div class="container">
<h1> All notes </h1>

<% @notes.each do |note| %>
	<h2><%= link_to note.title, note %></h2>
	<p><%= note.content %></p>
	<p><%= time_ago_in_words(note.created_at)%></p>

<% end %>
<%= link_to "New Note", new_note_path %>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>
</div>